<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      <div class="col-sm-8">
        <hr>
        <h3 style="text-align: center">Reviews</h3>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <% @reviews.reverse_each do |review| %>
            <dt>User</dt>
            <dd><%= review.user.first_name + review.user.last_name %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <% if @current_user == review.user %>
              <dt> Delete </dt>
              <dd><%= link_to fa_icon('trash'), [review.product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %></dd>
          <% end %>
        </dl>
      </div>
      <% if @logged_in %>
      <div class="col-sm-8">
        <hr>
        <h3 style="text-align: center">Write a review!</h3>
        <%= form_for [@product, @product.reviews.build] do |f| %>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :rating %>
            <%= f.select :rating, [1, 2, 3, 4, 5] %>
          </div>
          <%= f.submit 'Create Review', class: 'btn btn-primary' %>

        <% end %>
      </div>
      <% end %>
    </div>

  </article>

</section>

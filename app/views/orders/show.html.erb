<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% LineItem.where(order_id: @order.id).find_each do |item| %>
        <% product = Product.find(item.product_id) %>
        <tr>
          <td>
            <%= image_tag product.image.tiny %>
          </td>
          <td>
            <h4><%= product.name %></h4>
            <br>
            <p><%= product.description %></p>
          </td>
          <td>
            <%= number_with_precision(item.item_price_cents/100.00, precision: 2)%>
          </td>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <%= number_with_precision(item.total_price_cents/100.00, precision: 2)%>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= number_with_precision(@order.total_cents/100.00, precision: 2) %>
        </th>
      </tr>
      <tr>
        <th colspan="4">
          EMAIL:
        </th>
        <th>
          <%= @order.email %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
